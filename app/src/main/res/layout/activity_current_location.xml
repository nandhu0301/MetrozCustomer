<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".CustomerProfileActivity">







        <LinearLayout
            android:layout_margin="20dp"

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_centerInParent="true"
                android:id="@+id/animation"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_repeatMode="restart"
                app:lottie_rawRes="@raw/currentlocation"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:gravity="center"
                android:textSize="20dp"
                android:text="Delivering to"
                android:layout_below="@id/submit_location_button"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/locationText"
                android:paddingLeft="20dp"
                android:paddingTop="30dp"
                android:paddingRight="20dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:text=""
                android:layout_below="@id/submit_location_button"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Set Location"
                android:layout_marginTop="40dp"
                android:textColor="@color/white"
                android:background="@color/cyanbase"
                android:id="@+id/submit_location_button"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pick Location from map"
                android:layout_marginTop="40dp"
                android:textColor="@color/white"
                android:background="@color/cyanbase"
                android:id="@+id/pick_location_button"/>


        </LinearLayout>


</RelativeLayout>